<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messageInfoLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_columnWeight="100"
    android:clickable="true"
    android:focusable="true"
    android:gravity="bottom"
    android:paddingLeft="@dimen/medium_margin"
    android:paddingRight="@dimen/medium_margin"
    android:paddingTop="@dimen/medium_margin">

    <LinearLayout
        android:id="@+id/messageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:id="@+id/otherMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_weight=".7"
            android:background="@drawable/message_bubble"
            android:backgroundTint="@color/colorGrey" />

        <TextView
            android:id="@+id/myMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_weight=".7"
            android:background="@drawable/message_bubble"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="end"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/messageTimeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/messageLayout"
        android:visibility="gone">

        <TextView
            android:id="@+id/otherMessageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/medium_margin"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/myMessageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/medium_margin"
            android:gravity="end"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>